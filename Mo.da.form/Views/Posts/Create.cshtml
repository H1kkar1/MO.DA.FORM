@model MO.DA.FORM.Models.PostViewModel

@{
    ViewData["Title"] = "Create_post_new";
}

<h1 style="font-size:4vw;">Добавить новость</h1>

<hr />
<div class="wrapper">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label"> <h7 align="center" style=" font-size:1.5vw;">Пожалуйста, введите заголовок</h7> </label>
                    <input asp-for="type" class="form-control" />
                    <span asp-validation-for="type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label"> <h7 align="center" style=" font-size:1.5vw;">Пожалуйста, введите текст</h7> </label>
                    <input asp-for="text" class="form-control" />
                    <span asp-validation-for="text" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label"> <h7 align="center" style=" font-size:1.5vw;">Пожалуйста, введите дату публикации</h7> </label>
                    <input asp-for="datetime" class="form-control"/>
                    <span asp-validation-for="datetime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label"> <h7 align="center" style=" font-size:1.5vw;">Пожалуйста, прикрепите файл</h7> </label>
                    <input asp-for="file" type="file" class="form-control" />
                    <span asp-validation-for="file" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
