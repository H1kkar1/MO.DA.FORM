@model MO.DA.FORM.Models.Post

@{
    ViewData["Title"] = "Edit";
}

<h4>Новости</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="post_id" />
            <div class="form-group">
                <label asp-for="type" class="control-label">Заголовок новости</label>
                <input asp-for="type" class="form-control" />
                <span asp-validation-for="type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="text" class="control-label">Текст новости</label>
                <textarea class="form-control" oninput="document.querySelector('input#inp').value = this.value;" placeholder="Введите основной текст поста" style="height:500px; width:100%;"></textarea>
                <input id="inp" asp-for="text" style="display:none" />
                <span asp-validation-for="text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="datetime" class="control-label">Дата публикации</label>
                <input asp-for="datetime" class="form-control" />
                <span asp-validation-for="datetime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="file" class="control-label">Фото</label>
                <input asp-for="file" class="form-control" />
                <span asp-validation-for="file" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить изменения" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

