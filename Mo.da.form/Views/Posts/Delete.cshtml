@model MO.DA.FORM.Models.Post

@{
    ViewData["Title"] = "Delete";
}

<h3>Вы уверены, что хотите удалить новость?</h3>
<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Заголовок
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.type)
        </dd>
        <dt class = "col-sm-2">
            Текст
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.text)
        </dd>
        <dt class = "col-sm-2">
            Дедлайн
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.datetime)
        </dd>
        <dt class = "col-sm-2">
           Фотография
        </dt>
        <dd class = "col-sm-10">
            @if (Model.file != null) { Html.Raw("<img style='display: block; width: auto; height: auto; max-width: 1024px; max-height: 500px;' src=\"data:image/jpeg;base64," + Convert.ToBase64String(Model.file) + "\" />"); }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="post_id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
