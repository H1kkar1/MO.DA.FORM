@model IEnumerable<MO.DA.FORM.Models.Post>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/Post.css"/>
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@foreach (var item in Model)
{
    <div class="post">
        <h1>
            @Html.DisplayFor(modelItem => item.type)
        </h1>
        <hr class="hr" />
        <p>
            @Html.DisplayFor(modelItem => item.text)
        </p>
        <hr class="hr" />
        <div>
            @{
                if (item.file != null)
                {
                    @Html.Raw("<img style='display: block; width: auto; height: auto; max-width: 1024px; max-height: 500px;' src=\"data:image/jpeg;base64," + Convert.ToBase64String(item.file) + "\" />")
                    ;
                }
                else
                {
                    <p>картинки нет и не будет </p>
                }
                    
            }
        </div>
        <hr class="hr" />
        <div>
            <a asp-action="Edit" asp-route-id="@item.post_id">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.post_id">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.post_id">Delete</a>
        </div>
        <hr class="hr" />
        <p id="datetime">
            Дата: @Html.DisplayFor(modelItem => item.datetime)
        </p>
    </div>
}
