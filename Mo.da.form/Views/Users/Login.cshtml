@model MO.DA.FORM.Models.LoginModel
@{
    ViewData["Title"] = "Login";
}


<link rel="stylesheet" href="~/css/Form.css" />
<div class="row" style="height:700px;">
    <h1 style="font-size:4.5vw; text-align:center;">Вход</h1>
    <div class="col-md-4" style=" margin-right:60px; margin-bottom:100px;">
       
        <form asp-action="Login" class="reg_form" style="height:400px; width:570px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"><h7 align="center" style=" font-size:1.5vw;">Email</h7></label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> <h7 align="center" style=" font-size:1.5vw;">Пароль</h7></label>
                <input asp-for="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>

            <div class="form-group" style=" display: inline-block;">
                <input type="submit" value="Войти" class="btn btn-primary" />
                <p style="margin-left:60px; display: inline-block;">или</p>
            </div>

            <div class="form-group" style=" display: inline-block; width:60px; height:100px; margin-right:160px;">
                <a asp-controller="Users" asp-action="Create" style="width:50px; height:100px; ">
                    Зарегистрироваться
                </a>
            </div>

        </form>
       
        
    </div>
</div>

