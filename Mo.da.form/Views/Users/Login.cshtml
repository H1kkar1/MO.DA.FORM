@model MO.DA.FORM.Models.LoginModel
@{
    ViewData["Title"] = "Login";
}


<link rel="stylesheet" href="~/css/Form.css" />
<div class="row">
    <div class="col-md-4">
        <h1 align="center" style="font-size:4.5vw;">Login</h1>
        <form asp-action="Login" class="reg_form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"><h7 align="center" style=" font-size:1.5vw;">Email</h7></label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> <h7 align="center" style=" font-size:1.5vw;">Пароль</h7></label>
                <input asp-for="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

